{
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "bun run check && bun run check-types",
						"timeout": 30
					}
				]
			}
		]
	},
	"enabledPlugins": {
		"commit-commands@claude-plugins-official": true,
		"feature-dev@claude-plugins-official": true,
		"typescript-lsp@claude-plugins-official": true,
		"react-best-practices@cc-practice": true
	}
}
