{
	"name": "wx-mini",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"zod": "^lastest",
			"@orpc/server": "^lastest",
			"@orpc/client": "^lastest",
			"@orpc/openapi": "^lastest",
			"@orpc/zod": "^lastest",
			"better-auth": "^lastest",
			"dotenv": "^lastest",
			"tsdown": "^lastest"
		}
	},
	"scripts": {
		"fix:biome": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @wx-mini/db db:push",
		"db:studio": "turbo -F @wx-mini/db db:studio",
		"db:generate": "turbo -F @wx-mini/db db:generate",
		"db:migrate": "turbo -F @wx-mini/db db:migrate"
	},
	"devDependencies": {
		"turbo": "^2.5.8",
		"@biomejs/biome": "^2.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"@types/node": "^24.9.1"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.1"
}
